<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BmiCall1">

    <Button
        android:id="@+id/Breport"
        android:layout_width="371dp"
        android:layout_height="0dp"
        android:layout_marginBottom="138dp"
        android:background="#BEB5D5"
        android:backgroundTint="#B3A5D6"
        android:text="@string/report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="185dp"
        android:layout_height="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282">

        <RadioButton
            android:id="@+id/rmale"
            android:layout_width="339dp"
            android:layout_height="44dp"
            android:buttonTint="#020000"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rfemale"
            android:layout_width="93dp"
            android:layout_height="29dp"
            android:buttonTint="#020000"
            android:text="@string/female" />
    </RadioGroup>

    <TextView
        android:id="@+id/textCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="181dp"
        android:background="#5CD8B0"
        android:backgroundTint="#BDD5C3"
        android:breakStrategy="high_quality"
        android:focusableInTouchMode="true"
        android:fontFamily="cursive"
        android:text="@string/cal"
        android:textColor="#100B0B"
        android:textCursorDrawable="@android:drawable/alert_dark_frame"
        android:textSelectHandle="@drawable/ic_launcher_background"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="370dp"
        android:layout_height="46dp"
        android:background="#BEB5D5"
        android:backgroundTint="#B3A5D6"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/rw0707endq_01_1501869602" />

</androidx.constraintlayout.widget.ConstraintLayout>